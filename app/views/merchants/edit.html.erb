<h1>Editing Merchant: <%= @merchant.name %></h1>

<%= form_tag("/merchants/#{@merchant.id}", method: "patch") do %>
  <%= label_tag(:name, "Name ") %>
  <%= text_field_tag(:name, @merchant.name)  %>

  <%= label_tag(:address, "Address ") %>
  <%= text_field_tag(:address, @merchant.address) %>

  <%= label_tag(:city, "City ") %>
  <%= text_field_tag(:city, @merchant.city) %>

  <%= label_tag(:state, "State ") %>
  <%= text_field_tag(:state, @merchant.state) %>

  <%= label_tag(:zip, "Zip ") %>
  <%= text_field_tag(:zip, @merchant.zip) %>


  <%= submit_tag("Update Merchant Info") %>
<% end %>
