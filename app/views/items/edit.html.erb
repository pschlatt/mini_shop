<h1>Editing Item: <%= link_to @item.name, "/items/#{@item.id}" %></h1>

<%= form_tag("/items/#{@item.id}", method: "patch") do %>
  <%= label_tag(:name, "Name ") %>
  <%= text_field_tag(:name, @item.name) %>

  <%= label_tag(:price, "Price ") %>
  <%= text_field_tag(:price, @item.price) %>

  <%= label_tag(:description, "Description ") %>
  <%= text_field_tag(:description, @item.description) %>

  <%= label_tag(:image_url, "Image ") %>
  <%= text_field_tag(:image_url, @item.image_url) %>

  <%= label_tag(:inventory, "Inventory ") %>
  <%= text_field_tag(:inventory, @item.inventory) %>


  <%= submit_tag("Update Item Info") %>

  <% end %>
