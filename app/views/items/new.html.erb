<%= form_tag("/merchants/#{@merchant_id}/items", method: "post") do %>
  <%= label_tag(:name, "Name ") %>
  <%= text_field_tag(:name) %>

  <%= label_tag(:price, "Price ") %>
  <%= text_field_tag(:price) %>

  <%= label_tag(:description, "Description ") %>
  <%= text_field_tag(:description) %>

  <%= label_tag(:image_url, "Image ") %>
  <%= text_field_tag(:image_url) %>

  <%= label_tag(:inventory, "Inventory ") %>
  <%= text_field_tag(:inventory) %>


  <%= submit_tag("Create Item") %>

  <% end %>
